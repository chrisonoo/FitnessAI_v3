<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:FitnessAI.Maui.Pages"
    x:Class="FitnessAI.Maui.AppShell"
    BackgroundColor="#314fa8"
    TitleColor="White"
    ForegroundColor="White"
    TabBarBackgroundColor="#314fa8"
    TabBarTitleColor="White"
    TabBarUnselectedColor="#D2D2D2"
    TabBarForegroundColor="White"
    FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Home"
            Icon="home"
            ContentTemplate="{DataTemplate pages:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="Cart"
            Icon="cart"
            ContentTemplate="{DataTemplate pages:WorkoutPage}"
            Route="CartPage" />
        <ShellContent
            Title="Favorites"
            Icon="heart"
            ContentTemplate="{DataTemplate pages:TicketPage}"
            Route="FavoritesPage" />
        <ShellContent
            Title="Profile"
            Icon="profile"
            ContentTemplate="{DataTemplate pages:ProfilePage}"
            Route="ProfilePage" />
    </TabBar>

</Shell>
