@using FitnessAI.Application.Common.Interfaces
@using Microsoft.AspNetCore.Mvc.TagHelpers
@inject ICurrentUserService CurrentUserService
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@ViewData["Title"] - Fitness AI</title>

    <!-- Custom fonts for this template-->
    <link href="~/_LayoutFiles2/fontawesome/all.min.css" rel="stylesheet" type="text/css">

    <!-- Bootstrap-->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" type="text/css">


    <!-- Custom fonts from Google for this template-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200;0,300;0,400;0,600;0,700;0,800;0,900;1,200;1,300;1,400;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

    @await RenderSectionAsync("Styles", false)

    <!-- Custom styles for this template-->
    <link href="~/_LayoutFiles2/sb-admin-2.css" rel="stylesheet">
    <link href="~/_LayoutFiles2/layout.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/toastr.js/toastr.min.css"/>

</head>

<body id="page-top">


<!-- Page Wrapper -->
<div id="wrapper">

    <partial name="__SideBarPartial"/>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            <partial name="__TopBarPartial"/>

            @RenderBody()

            @* <partial name="__PageContentPartial"/> *@

        </div>
        <!-- End of Main Content -->

        <partial name="__FooterPartial"/>

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<partial name="__ScrollTopPartial"/>

<partial name="__LogoutModalPartial"/>

<!------------------------->
<!-- Layout scripts ------->
<!------------------------->

<!-- Bootstrap core JavaScript-->
<script src="~/_LayoutFiles2/jquery.min.js"></script>
<script src="~/_LayoutFiles2/bootstrap.bundle.min.js"></script>

<!-- Core plugin JavaScript-->
<script src="~/_LayoutFiles2/jquery.easing.min.js"></script>

<!-- Custom scripts for all pages-->
<script src="~/_LayoutFiles2/sb-admin-2.js"></script>

<!-- Page level plugins -->
<script src="~/_LayoutFiles2/Chart.min.js"></script>

<!-- Page level custom scripts -->
<script src="~/_LayoutFiles2/chart-area-demo.js"></script>
<script src="~/_LayoutFiles2/chart-pie-demo.js"></script>

<!------------------------->
<!-- Application scripts -->
<!------------------------->

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery.cookie/jquery.cookie.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script>
    var userId = '@CurrentUserService.UserId';
</script>
<script src="~/lib/microsoft-signalr/signalr.min.js"></script>
<script src="~/js/user-notification.js"></script>
<script src="~/lib/toastr.js/toastr.min.js"></script>

@await RenderSectionAsync("Scripts", false)

<partial name="_NotificationPartial"/>

</body>

</html>