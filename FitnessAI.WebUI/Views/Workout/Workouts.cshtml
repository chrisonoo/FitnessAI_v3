@model IEnumerable<FitnessAI.Application.Workouts.Queries.GetWorkouts.WorkoutDto>

@{
    ViewBag.Title = "Treningi";
}

<div class="container">
    <div class="d-flex gap-3 border p-3 bg-white">
        <div id="workouts-list" class="flex-fill bg-white border" style="width: 45%">
            <h2 class="text-center m-2">Treningi</h2>
            <div class="border m-3 p-4">
                <div class="text-center mb-3 d-flex gap-2">
                    <h5 class="flex-fill">Wybierz trening</h5>
                </div>

                <table class="table table-hover">
                    <tbody>
                    @foreach (var workout in Model)
                    {
                        <tr
                            class="row-workout"
                            data-row-workout-id="@workout.Id">
                            <td>
                                @workout.Title
                            </td>
                            <td>
                                <a
                                    href="#"
                                    data-toggle="modal"
                                    data-target="#editWorkoutModal"
                                    data-workout-id="@workout.Id"
                                    data-workout-title="@workout.Title"
                                    style="text-decoration: none !important;">
                                    <i class="fas fa-solid fa-pen-to-square me-2"></i>
                                </a>
                                <a
                                    href="#"
                                    data-toggle="modal"
                                    data-target="#deleteWorkoutModal"
                                    data-workout-id="@workout.Id"
                                    data-workout-title="@workout.Title"
                                    style="text-decoration: none !important;">
                                    <i class="fas fa-solid fa-trash-can"></i>
                                </a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
                <div class="text-center mt-5">
                    <a
                        href="#"
                        data-toggle="modal"
                        data-target="#addWorkoutModal"
                        role="button"
                        class="btn btn-primary mx-5">
                        <i class="fas fa-solid fa-circle-plus me-2"></i>
                        Zaplanuj nowy trening
                    </a>
                </div>
            </div>
        </div>
        <div id="exercises-list" class="flex-fill bg-white border">
            <h2 class="text-center m-2">Ćwiczenia</h2>
            <div class="border m-3 p-4">
                <div class="text-center mb-3">
                    <h5>Ćwiczenia dodane do treningu</h5>
                </div>
                <table class="table table-hover">
                    <tbody>
                    <tr>
                        <td>
                            Ćwiczenie na nogi
                        </td>
                        <td>
                            Kalistenika
                        </td>
                        <td>
                            <a
                                href="#"
                                data-toggle="modal"
                                data-target="#deleteWorkoutModal"
                                @* data-exercise-id="@workout.Id" *@
                                style="text-decoration: none !important;">
                                <i class="fas fa-solid fa-trash-can"></i>
                            </a>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="border m-3 p-4">
                <div class="text-center mb-3">
                    <h5>Moje Ćwiczenia</h5>
                </div>
                <table class="table table-hover">
                    <tbody>
                    <tr>
                        <td>
                            Ćwiczenie na nogi
                        </td>
                        <td>
                            Kalistenika
                        </td>
                        <td>
                            <a
                                href="#"
                                data-toggle="modal"
                                data-target="#deleteWorkoutModal"
                                @* data-exercise-id="@workout.Id" *@
                                style="text-decoration: none !important;">
                                <i class="fas fa-solid fa-circle-plus"></i>
                            </a>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<partial name="Workout/__EditWorkoutModalPartial"/>
<partial name="Workout/__DeleteWorkoutModalPartial"/>
<partial name="Workout/__AddWorkoutModalPartial"/>

@section Scripts
{
    <script src="~/js/api/workouts.js"></script>
}